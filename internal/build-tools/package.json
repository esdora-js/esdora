{
  "name": "@esdora/build-tools",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Internal build tools and configurations for Esdora packages",
  "author": "Esdora <https://github.com/esdora-js/esdora>",
  "license": "MIT",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./configs": {
      "import": {
        "types": "./dist/configs.d.mts",
        "default": "./dist/configs.mjs"
      },
      "require": {
        "types": "./dist/configs.d.cts",
        "default": "./dist/configs.cjs"
      }
    },
    "./cli": "./dist/cli.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "esdora-build": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild && chmod +x dist/cli.mjs",
    "stub": "unbuild --stub",
    "dev": "unbuild --stub",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "esbuild": "catalog:",
    "tsx": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:"
  }
}
