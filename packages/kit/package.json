{
  "name": "@esdora/kit",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "A library of tools commonly used for development",
  "author": "Esdora <https://github.com/esdora-js/esdora>",
  "license": "MIT",
  "funding": "https://github.com/esdora-js/esdora",
  "homepage": "https://github.com/esdora-js/esdora#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esdora-js/esdora.git"
  },
  "bugs": "https://github.com/esdora-js/esdora/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.mts",
  "publishConfig": {
    "access": "public",
    "directory": "./dist"
  },
  "scripts": {
    "build": "unbuild && npm run organize-types && npm run build:browser && npm run generate-dist-package",
    "build:browser": "tsx scripts/build-browser.ts",
    "organize-types": "tsx scripts/organize-types.ts",
    "dev": "unbuild --stub",
    "generate-dist-package": "tsx scripts/update-package.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  }
}
