{
  "name": "@esdora/color",
  "type": "module",
  "version": "0.0.0",
  "description": "Color conversion and manipulation with CSS string support",
  "author": "Esdora <https://github.com/esdora-js/esdora>",
  "license": "MIT",
  "funding": "https://github.com/esdora-js/esdora",
  "homepage": "https://github.com/esdora-js/esdora#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esdora-js/esdora.git"
  },
  "bugs": "https://github.com/esdora-js/esdora/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "unbuild --stub",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@esdora/kit": "workspace:*",
    "culori": "catalog:"
  },
  "devDependencies": {
    "@esdora/build-tools": "workspace:*",
    "@types/culori": "^4.0.0"
  }
