{
  "name": "@esdora/date",
  "type": "module",
  "version": "0.1.3",
  "description": "A modern, immutable date utility library, powered by date-fns for reliability and enhanced with unique convenience functions.",
  "author": "Esdora <https://github.com/esdora-js/esdora>",
  "license": "MIT",
  "funding": "https://github.com/esdora-js/esdora",
  "homepage": "https://github.com/esdora-js/esdora#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esdora-js/esdora.git"
  },
  "bugs": "https://github.com/esdora-js/esdora/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./fp": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/fp.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/fp.cjs"
      }
    },
    "./locale": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/locale.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/locale.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@esdora/kit": "workspace:*",
    "date-fns": "catalog:"
  }
}
