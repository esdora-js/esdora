{
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.16.0",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:kit": "pnpm -C packages/kit run build",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix .",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "docs:preview": "pnpm -C docs run docs:preview",
    "release": "bumpp -r && pnpm -r publish",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:ui": "turbo test:ui",
    "test:kit": "pnpm -C packages/kit run test run",
    "typecheck": "turbo typecheck",
    "commit": "czg",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "turbo build",
    "update:deps": "npx taze -r -w",
    "catalog": "pnpx codemod pnpm/catalog",
    "postinstall": "lefthook install",
    "clean": "node ./scripts/clean.mjs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/utils": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@esdora/kit": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "bumpp": "catalog:",
    "commitlint-plugin-function-rules": "catalog:",
    "cz-git": "catalog:",
    "czg": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "lefthook": "catalog:",
    "pnpm": "catalog:",
    "tinyexec": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vitest-package-exports": "catalog:",
    "yaml": "catalog:"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  }
}
