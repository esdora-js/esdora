{
  "type": "module",
  "version": "0.1.1",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=22.16.0",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:kit": "pnpm -C packages/kit run build",
    "stub": "pnpm -r run stub --if-present",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix .",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "docs:preview": "pnpm -C docs run docs:preview",
    "release": "bumpp -r && pnpm build && pnpm publish -r --access public",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:ui": "turbo test:ui",
    "typecheck": "turbo typecheck",
    "commit": "czg",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "turbo build",
    "update:deps": "npx taze -r -w",
    "catalog": "pnpx codemod pnpm/catalog",
    "postinstall": "lefthook install",
    "clean": "node ./scripts/clean.mjs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/utils": "catalog:",
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "bumpp": "catalog:",
    "commitlint-plugin-function-rules": "catalog:",
    "cz-git": "catalog:",
    "czg": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "lefthook": "catalog:",
    "pnpm": "catalog:",
    "tinyexec": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vitest-package-exports": "catalog:",
    "yaml": "catalog:"
  }
}
